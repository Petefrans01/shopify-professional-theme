{% comment %}
  Section: Bannière Hero
{% endcomment %}

<div class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__wrapper">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 750 }} 750w,
                {{ section.settings.image | image_url: width: 1100 }} 1100w,
                {{ section.settings.image | image_url: width: 1500 }} 1500w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.heading }}"
        class="hero-banner__image"
        loading="eager"
      >
    {% endif %}

    <div class="hero-banner__content page-width">
      <div class="hero-banner__text">
        {% if section.settings.heading != blank %}
          <h1 class="hero-banner__heading">
            {{ section.settings.heading }}
          </h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="hero-banner__subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="hero-banner__button button">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bannière Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image de fond"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Bienvenue dans notre boutique"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Sous-titre",
      "default": "Découvrez nos produits exceptionnels"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "Acheter maintenant"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignement du texte",
      "options": [
        {
          "value": "left",
          "label": "Gauche"
        },
        {
          "value": "center",
          "label": "Centre"
        },
        {
          "value": "right",
          "label": "Droite"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Bannière Hero"
    }
  ]
}
{% endschema %}
