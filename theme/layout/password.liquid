<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    {{ content_for_header }}

    {{ 'base.css' | asset_url | stylesheet_tag }}

    <style>
      .password-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
        text-align: center;
      }
      
      .password-page__logo {
        margin-bottom: 2rem;
      }
      
      .password-page__content {
        max-width: 500px;
        width: 100%;
      }
      
      .password-page h1 {
        margin-bottom: 1rem;
      }
      
      .password-form {
        margin-top: 2rem;
      }
      
      .password-form input {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
      }
      
      .password-form button {
        width: 100%;
        padding: 0.75rem;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      
      .password-form button:hover {
        background: #333;
      }
    </style>
  </head>

  <body class="password-page">
    <div class="password-page__content">
      {%- if shop.logo -%}
        <div class="password-page__logo">
          <img src="{{ shop.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
        </div>
      {%- endif -%}

      <h1>{{ shop.name }}</h1>
      <p>{{ 'general.password_page.opening_soon' | t }}</p>

      {{ content_for_layout }}

      {%- if shop.password_message != blank -%}
        <div class="password-page__message">
          {{ shop.password_message }}
        </div>
      {%- endif -%}

      <p>
        <a href="/admin">{{ 'general.password_page.admin_link_html' | t }}</a>
      </p>
    </div>
  </body>
</html>
