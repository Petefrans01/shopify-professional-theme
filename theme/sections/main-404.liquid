{% comment %}
  Section: Page 404
{% endcomment %}

<div class="main-404" data-section-id="{{ section.id }}">
  <div class="main-404__wrapper page-width">
    <div class="main-404__content">
      <h1 class="main-404__title">{{ 'general.404.title' | t }}</h1>
      
      <p class="main-404__text">
        {{ 'general.404.subtext_html' | t }}
      </p>

      <div class="main-404__search">
        <form action="{{ routes.search_url }}" method="get" role="search">
          <input
            type="search"
            name="q"
            placeholder="{{ 'general.search.placeholder' | t }}"
            class="main-404__search-input"
          >
          <button type="submit" class="button button--primary">
            {{ 'general.search.submit' | t }}
          </button>
        </form>
      </div>

      <a href="{{ routes.root_url }}" class="button button--secondary">
        {{ 'general.404.link' | t }}
      </a>
    </div>
  </div>
</div>

<style>
  .main-404 {
    padding: var(--spacing-2xl) 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .main-404__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .main-404__title {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
  }

  .main-404__text {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xl);
    color: #666;
  }

  .main-404__search {
    margin-bottom: var(--spacing-lg);
  }

  .main-404__search form {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 500px;
    margin: 0 auto;
  }

  .main-404__search-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .main-404__title {
      font-size: 3rem;
    }

    .main-404__search form {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Page 404",
  "settings": []
}
{% endschema %}
